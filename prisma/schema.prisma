// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // We removed the custom 'output' line to keep imports standard (@prisma/client)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. NEXTAUTH MODELS (Required for Login) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  password      String?   // For credentials provider
  
  // Relations to your app data
  products      Product[]
  orders        Order[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  refresh_token_expires_in Int?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

// --- 2. BUSINESS MODELS (For your AI Dashboard) ---

model Product {
  id        String   @id @default(cuid())
  name      String  @unique
  category  String
  price     Decimal
  createdAt DateTime @default(now())
  
  // Link to User (Multi-tenancy)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  orderItems OrderItem[]
}

model Order {
  id          String      @id @default(cuid())
  status      String      // e.g. 'completed', 'pending'
  totalAmount Decimal
  createdAt   DateTime    @default(now())
  
  // Link to User
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  items       OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  quantity  Int
  
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}